{
	"private": true,
	"version": "0.0.0",
	"name": "@author/monorepo",
	"type": "module",
	"workspaces": [
		"packages/**"
	],
	"scripts": {
		"build": "npm run build --workspaces --if-present",
		"docs": "typedoc --logLevel Verbose",
		"docs-watch": "typedoc --watch",
		"clean": "rm -rf ./dist/ ./node_modules ./package-lock.json",
		"test": "vitest --coverage",
		"test-ci": "vitest run --coverage",
		"test-ui": "vitest --ui --coverage",
		"test-html": "vitest run --reporter=html --coverage.clean; vite preview --outDir ./dist/vitest/report",
		"test-json": "vitest run --reporter=json --coverage.clean",
		"fmt": "oxfmt",
		"fmt-ci": "oxfmt --check",
		"lint": "oxlint --type-aware --type-check",
		"fix": "oxlint --fix",
		"inspect": "node-modules-inspector"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"@vitest/coverage-v8": "^4.0.16",
		"@vitest/ui": "^4.0.15",
		"oxfmt": "^0.21.0",
		"oxlint": "^1.36.0",
		"oxlint-tsgolint": "^0.10.0",
		"node-modules-inspector": "^1.2.0",
		"publint": "^0.3.16",
		"tsdown": "^0.18.4",
		"typedoc": "^0.28.15",
		"typescript": "^5.9.3",
		"vite": "npm:rolldown-vite@^7.2.11",
		"vitest": "^4.0.15"
	}
}
